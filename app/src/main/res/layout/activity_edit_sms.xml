<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.bbcag.bespin.smsscheduler.EditSms">

    <EditText
        android:id="@+id/titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Titel" />

    <EditText
        android:id="@+id/phoneNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contactButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/contactButton"
        android:ems="10"
        android:hint="Phone Nr."
        android:inputType="phone" />

    <ImageButton
        android:id="@+id/contactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titel"
        android:background="#00ffffff"
        android:src="@drawable/ic_contacts_black_48dp" />

    <EditText
        android:id="@+id/smsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phoneNr"
        android:ems="10"
        android:hint="SMS Text"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/timeButton"
        android:ems="10"
        android:hint="Time"
        android:inputType="time" />

    <ImageButton
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateButton"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:src="@drawable/ic_schedule_black_48dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dateButton"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <ImageButton
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:src="@drawable/ic_today_black_48dp" />

</RelativeLayout>
